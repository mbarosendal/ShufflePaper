<Window
    x:Class="ShufflePaper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ShufflePaper"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="ShufflePaper"
    Width="450"
    Height="500"
    Background="#FAFAFA"
    ResizeMode="CanMinimize">

    <Window.Resources>
        <!--  Button style  -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4ECDC4" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45B7AA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Primary button style  -->
        <Style x:Key="ModernButtonOrange" TargetType="Button">
            <Setter Property="Background" Value="#FF7043" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F4511E" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Secondary button style  -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4ECDC4" />
                                <Setter Property="Background" Value="#F0FDFC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Buttons for wallpaper styles  -->
        <Style x:Key="StyleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#6B7280" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4ECDC4" />
                                <Setter Property="Background" Value="#F0FDFC" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#4ECDC4" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="#4ECDC4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Clean textbox  -->
        <Style x:Key="CleanTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4ECDC4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,16"
            Orientation="Horizontal">
            <Image
                Width="20"
                Height="20"
                Margin="0,0,8,0"
                Source="Assets/app.png" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#374151"
                Text="ShufflePaper" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Folder actions  -->
            <GroupBox
                Grid.Column="0"
                Padding="12"
                Header="Folder Selection">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="Medium"
                        Text="Selected Folder:" />
                    <TextBlock
                        x:Name="FolderPathText"
                        Margin="0,0,0,8"
                        Foreground="#6B7280"
                        Text="{Binding SelectedFolder, FallbackValue='None'}"
                        TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontWeight="Medium" Text="Images found:" />
                        <TextBlock
                            Margin="8,0,0,12"
                            Foreground="#6B7280"
                            Text="{Binding ImagesFound, FallbackValue='0'}" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            Margin="0,0,8,0"
                            HorizontalAlignment="Left"
                            Click="SelectFolder_Click"
                            Content="Choose"
                            Style="{StaticResource SecondaryButton}" />
                        <Button
                            HorizontalAlignment="Right"
                            Click="OpenFolder_Click"
                            Content="Open"
                            Style="{StaticResource SecondaryButton}" />
                    </StackPanel>

                </StackPanel>
            </GroupBox>

            <!--  System Settings  -->
            <GroupBox
                Grid.Column="2"
                Padding="12"
                Header="System Settings">
                <StackPanel>
                    <CheckBox Content="Start with Windows" IsChecked="{Binding StartWithWindows}" />
                    <CheckBox Content="Start Minimized" IsChecked="{Binding StartMinimized}" />
                    <CheckBox Content="Start on Auto" IsChecked="{Binding StartOnAuto}" />
                    <CheckBox Content="Close to Tray" IsChecked="{Binding CloseToTray}" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <!--  Wallpaper Actions  -->
        <GroupBox
            Grid.Row="2"
            Margin="0,0,0,12"
            Padding="12"
            Header="Wallpaper Actions">
            <StackPanel>
                <Button
                    Margin="0,0,0,12"
                    Click="SetWallpaper_Click"
                    Content="Set Random Wallpaper"
                    Style="{StaticResource ModernButton}" />

                <!--  Timer control  -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="12" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Click="ToggleTimer_Click"
                        Content="{Binding ToggleTimerButtonText}"
                        Style="{StaticResource ModernButtonOrange}" />

                    <StackPanel
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel Margin="0,0,0,6" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Text="Interval (s):" />
                            <TextBox
                                Width="50"
                                HorizontalContentAlignment="Center"
                                Style="{StaticResource CleanTextBox}"
                                Text="{Binding IntervalSeconds}" />
                        </StackPanel>

                        <!--  Style Selector  -->
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontSize="11"
                                FontWeight="Medium"
                                Foreground="#374151"
                                Text="Wallpaper Style:" />
                            <UniformGrid Columns="5" Rows="1">
                                <ToggleButton
                                    x:Name="CenterBtn"
                                    Click="StyleButton_Click"
                                    Content="Center"
                                    Style="{StaticResource StyleButton}"
                                    Tag="Center" />
                                <ToggleButton
                                    x:Name="TileBtn"
                                    Click="StyleButton_Click"
                                    Content="Tile"
                                    Style="{StaticResource StyleButton}"
                                    Tag="Tile" />
                                <ToggleButton
                                    x:Name="StretchBtn"
                                    Click="StyleButton_Click"
                                    Content="Stretch"
                                    Style="{StaticResource StyleButton}"
                                    Tag="Stretch" />
                                <ToggleButton
                                    x:Name="FitBtn"
                                    Click="StyleButton_Click"
                                    Content="Fit"
                                    Style="{StaticResource StyleButton}"
                                    Tag="Fit" />
                                <ToggleButton
                                    x:Name="FillBtn"
                                    Click="StyleButton_Click"
                                    Content="Fill"
                                    Style="{StaticResource StyleButton}"
                                    Tag="Fill" />
                            </UniformGrid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>