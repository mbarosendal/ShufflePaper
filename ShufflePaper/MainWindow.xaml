<Window
    x:Class="ShufflePaper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ShufflePaper"
    Width="420"
    Height="420"
    Background="#FAFAFA"
    ResizeMode="CanMinimize">

    <Window.Resources>
        <!--  Minimal modern button style  -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4ECDC4" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45B7AA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Modern button with complementary orange color  -->
        <Style x:Key="ModernButtonOrange" TargetType="Button">
            <Setter Property="Background" Value="#FF7043" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F4511E" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Clean secondary button  -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4ECDC4" />
                                <Setter Property="Background" Value="#F0FDFC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Clean textbox  -->
        <Style x:Key="CleanTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4ECDC4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header with icon  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,16"
            Orientation="Horizontal">
            <Image
                Width="20"
                Height="20"
                Margin="0,0,8,0"
                Source="Assets/app.png" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#374151"
                Text="ShufflePaper" />
        </StackPanel>

        <!--  Top row with Folder Selection and System Settings side by side  -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Folder Selection  -->
            <GroupBox
                Grid.Column="0"
                Padding="12"
                Header="Folder Selection">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="Medium"
                        Text="Selected Folder:" />
                    <TextBlock
                        x:Name="FolderPathText"
                        Margin="0,0,0,8"
                        Foreground="#6B7280"
                        Text="None"
                        TextWrapping="Wrap" />
                    <Button
                        HorizontalAlignment="Left"
                        Click="SelectFolder_Click"
                        Content="Choose Folder"
                        Style="{StaticResource SecondaryButton}" />
                </StackPanel>
            </GroupBox>

            <!--  System Settings  -->
            <GroupBox
                Grid.Column="2"
                Padding="12"
                Header="System Settings">
                <StackPanel>
                    <CheckBox Content="Start with Windows" IsChecked="{Binding StartWithWindows}" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <!--  Wallpaper Actions  -->
        <GroupBox
            Grid.Row="2"
            Margin="0,0,0,12"
            Padding="12"
            Header="Wallpaper Actions">
            <StackPanel>
                <Button
                    Margin="0,0,0,12"
                    Click="SetWallpaper_Click"
                    Content="Set Random Wallpaper"
                    Style="{StaticResource ModernButton}" />

                <!--  Timer control row  -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="12" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Click="ToggleTimer_Click"
                        Content="{Binding ToggleTimerButtonText}"
                        Style="{StaticResource ModernButtonOrange}" />

                    <StackPanel
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Text="Interval (s):" />
                        <TextBox
                            Width="60"
                            HorizontalContentAlignment="Center"
                            Style="{StaticResource CleanTextBox}"
                            Text="{Binding IntervalSeconds}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>