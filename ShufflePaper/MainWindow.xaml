<Window
    x:Class="ShufflePaper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ShufflePaper"
    Width="400"
    Height="200">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock FontWeight="Bold" Text="Selected Folder:" />
        <TextBlock
            x:Name="FolderPathText"
            Margin="0,5"
            Text="None"
            TextWrapping="Wrap" />

        <Button
            Margin="0,10"
            Click="SelectFolder_Click"
            Content="Choose Folder" />
        <Button Click="SetWallpaper_Click" Content="Set Random Wallpaper" />

        <StackPanel
            Margin="0,5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Interval (s):" />
            <TextBox Width="50" Text="{Binding IntervalSeconds}" />
        </StackPanel>

        <Button
            Margin="0,5"
            Click="ToggleTimer_Click"
            Content="{Binding ToggleTimerButtonText}" />

        <CheckBox
            Margin="5"
            Content="Start with Windows"
            IsChecked="{Binding StartWithWindows}" />


    </StackPanel>
</Window>
