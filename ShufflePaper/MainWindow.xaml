<Window
    x:Class="ShufflePaper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ShufflePaper"
    Width="400"
    Height="200">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock FontWeight="Bold" Text="Selected Folder:" />
        <TextBlock
            x:Name="FolderPathText"
            Margin="0,5"
            Text="None"
            TextWrapping="Wrap" />

        <Button
            Margin="0,10"
            Click="ChooseFolder_Click"
            Content="Choose Folder" />
        <Button Click="SetRandomWallpaper_Click" Content="Set Random Wallpaper" />
    </StackPanel>
</Window>
